Import( "env", "dev", "mode", "cpp_release_flags", "cpp_debug_flags" )
localenv = env.Copy()

project = "bulletdynamics"

#~ if we are on windows we need to tell gcc to bild a windows exe
#~ we need to set -mwindows as a compiler flag

include_path        =   [
                            "#external/bullet"
                        ]

localenv.Append( CPPPATH = include_path)
if mode == "release":
    name = project
    localenv.Append (  
                        CCFLAGS = cpp_release_flags,
                        LIBS    =   [ 
                                        "bulletcollision"
                                    ],
                        LIBPATH =   [
                                        "/bin/release/obj/bulletcollision"
                                    ]                        
                    )
else:
    name = project + "_d"
    localenv.Append (  
                        CCFLAGS = cpp_debug_flags,                     
                        LIBS    =   [ 
                                        "bulletcollision_d"
                                    ],
                        LIBPATH =   [
                                        "/bin/debug/obj/bulletcollision"
                                    ]
                    )
                    
    
import sys
if sys.platform == "win32":
    localenv.Tool( "mingw" )

files = []
files += dev.DevGetSourceFiles( "ConstraintSolver", [ "*.cpp" ]  )
files += dev.DevGetSourceFiles( "Dynamics", [ "*.cpp" ]  )
files += dev.DevGetSourceFiles( "Vehicle", [ "*.cpp" ]  )

#~ print files

tgt = localenv.StaticLibrary( name, files )
localenv.Alias(project, tgt)