# example
# radakan_path=c:/games/radakan
# ogre_media_path=c:/ogre3d/media
[directories]
radakan_path=C:/games/radakan/trunk
ogre_media_path=C:/OgreSDK/media

[general]
show dialog=true

[key bindings: Strategies :: Game_Modes :: Game_Mode]
menu=escape
quit=q

[key bindings: Strategies :: Behaviors :: Player]
go forward=w
go backward=s
turn left=a
turn right=d
jump=space
select target=t
hit=h
give=g
reset=r

[gameplay]
# These affect all characters.
movement reaction=500
maximal movement speed=4
turn reaction=50
maximal turn speed=4
